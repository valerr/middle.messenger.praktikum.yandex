    "lint": "eslint .",
    "lint-styles": "npx stylelint \"**/*.scss\"",
    "test": "mocha --require ts-node/register --require ./src/mochaSetup.js './src/**/*.test.ts'"
  },
  "author": "",
  "license": "ISC",
