    "eslint": "8.28.0",
    "eslint-config-airbnb": "19.0.4",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "jsdom": "21.0.0",
    "mocha": "10.2.0",
    "proxyquire": "2.1.3",
